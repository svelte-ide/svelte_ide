{
  // Launch configurations for VS Code
  // - "Run Explorer Dev" starts the dev server in the "explorer" folder
  // - "Attach to Chrome" attaches the Chrome debugger to the running Vite server
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Explorer Dev",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 9229,
      "cwd": "${workspaceFolder}/explorer",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Attach to Chrome",
      "type": "pwa-chrome",
      "request": "attach",
      "url": "http://localhost:5177",
      "webRoot": "${workspaceFolder}/explorer",
      "timeout": 30000
    }
  ]
}
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch MVP Explorateur",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/explorer",
      "preLaunchTask": "npm: dev - explorer",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://[^\\s]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}/explorer",
      "urlFilter": "http://localhost:5173/*"
    }
  ],
  "compounds": []
}
